        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.DrawCalliActivity" />
        <activity
            android:name=".activity.MoreCalliActivity"
            android:label="@string/title_activity_more_calli"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.CaillContentActivity"
            android:label="@string/title_activity_caill_content"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.LearnContentActivity"
            android:label="LearnContentActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.PostCalliActivity"
            android:label="@string/title_activity_post_calli"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.FreeDrawCalliActivity"
            android:label="@string/title_activity_post_calli"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.UploadCalliActivity"
            android:label="@string/title_activity_upload_calli"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>