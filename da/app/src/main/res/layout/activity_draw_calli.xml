<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tool_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/penBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="1dip"
            android:layout_weight="0"
            android:contentDescription="@drawable/baseline_brush_black_48"
            android:padding="6dp"
            android:src="@drawable/baseline_brush_black_48" />

        <ImageView
            android:id="@+id/eraserBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/selector_tool_bg"
            android:contentDescription="뭔말이여"
            android:src="@drawable/selector_eraser"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/undoBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="1dip"
            android:layout_weight="0"
            android:contentDescription="뭔말이여"
            android:padding="6dp"
            android:rotation="180"
            android:src="@drawable/baseline_chevron_right_black_48" />

        <ImageView
            android:id="@+id/redoBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/selector_tool_bg"
            android:contentDescription="뭔말이여"
            android:src="@drawable/selector_redo"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bgImgBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/selector_tool_bg"
            android:contentDescription="뭔말이여"
            android:src="@drawable/selector_image"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/playBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="1dip"
            android:layout_weight="0"
            android:contentDescription="뭔말이여"
            android:padding="6dp"
            app:srcCompat="@drawable/baseline_replay_black_48" />

        <ImageView
            android:id="@+id/saveFileBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/selector_tool_bg"
            android:contentDescription="뭔말이여"
            android:src="@drawable/selector_save"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/loadFileBtn"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:layout_weight="0"
            android:contentDescription="뭔말이여"
            android:padding="6dp"
            android:src="@drawable/add_favorite_pen"
            app:srcCompat="@drawable/baseline_school_black_48" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6" />

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/primaryTextHintColor"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tv_drawcalli_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:contentDescription="@string/description"
                android:gravity="center_vertical|center_horizontal"
                android:text="올리기"
                android:textColor="@color/cardview_light_background" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <com.samsung.android.sdk.pen.pg.utils.BaseFrameLayout
        android:id="@+id/spenViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/spenViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </RelativeLayout>
    </com.samsung.android.sdk.pen.pg.utils.BaseFrameLayout>

</LinearLayout>