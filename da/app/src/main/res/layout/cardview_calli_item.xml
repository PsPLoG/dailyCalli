<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:showDividers="end">

                <ImageView
                    android:id="@+id/tv_carditem_userimg"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:foreground="@drawable/round"
                    card_view:srcCompat="@drawable/drawing_button_bg_circle_selected" />

                <TextView
                    android:id="@+id/textView_cardItem_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="left|center_horizontal|center"
                    android:text="닉네임" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_carditem_calli"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#f2f2f2"
                card_view:srcCompat="@drawable/imagebg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:showDividers="beginning">

                <TextView
                    android:id="@+id/textview_carditem_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:text="내용"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>