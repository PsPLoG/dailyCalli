<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingTop="100dp"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText_signup_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/inputs"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textPersonName"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/primaryTextHintColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textVIew_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_signup_pw"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/inputs"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/primaryTextHintColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editText_signup_pw1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/inputs"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/primaryTextHintColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_signup_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_signup_nickname"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/inputs"
            android:ems="10"
            android:hint="닉네임"
            android:inputType="textPersonName"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/primaryTextHintColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_signup_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_signup"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button"
            android:text="회원가입"
            android:textColor="@color/primaryColor"
            tools:layout_editor_absoluteX="138dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>